<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/restaurant_item">

    <android.support.constraint.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="380dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0">

        <ImageView
                android:layout_width="91dp"
                android:layout_height="99dp" tools:srcCompat="@drawable/default_not_found"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" android:id="@+id/restaurant_item_image" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/rest_name"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/restaurant_item_name"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/restaurant_item_image"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="@string/access"
                android:layout_width="wrap_content"
                android:id="@+id/restaurant_item_access" android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/restaurant_item_image" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_item_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.0" android:textSize="10sp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>